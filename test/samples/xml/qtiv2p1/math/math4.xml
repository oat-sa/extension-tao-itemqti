        <math xmlns:m="http://www.w3.org/1998/Math/MathML" display="block">
            <semantics>
                <mtable>
                    <mtr>
                        <mtd columnalign="right">
                            <mrow>
                                <mi>sin</mi>
                                <mfenced close=")" open="(">
                                    <mi>B</mi>
                                </mfenced>
                            </mrow>
                        </mtd>
                        <mtd columnalign="center">
                            <mo>=</mo>
                        </mtd>
                        <mtd columnalign="left">
                            <mfrac>
                                <mi>b</mi>
                                <mi>a</mi>
                            </mfrac>
                        </mtd>
                    </mtr>
                    <mtr>
                        <mtd columnalign="right">
                            <mi>b</mi>
                        </mtd>
                        <mtd columnalign="center">
                            <mo>=</mo>
                        </mtd>
                        <mtd columnalign="left">
                            <mi>a</mi>
                            <mrow>
                                <mi>sin</mi>
                                <mfenced close=")" open="(">
