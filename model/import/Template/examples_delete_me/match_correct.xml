        title="Score_Test 1"
        adaptive="false"
        timeDependent="false"
        xml:lang="en-US">
    <responseDeclaration baseType="identifier" cardinality="multiple" identifier="RESPONSE">
        <correctResponse>
            <value>
                <![CDATA[choice_1]]>
            </value>
            <value>
                <![CDATA[choice_2]]>
            </value>
        </correctResponse>
    </responseDeclaration>
    <outcomeDeclaration cardinality="single" baseType="float" identifier="SCORE_RESPONSE"/>
    <outcomeDeclaration cardinality="single" baseType="float" identifier="SCORE" normalMaximum="1"/>
    <outcomeDeclaration cardinality="single" baseType="float" identifier="MAXSCORE">
        <defaultValue>
            <value>1</value>
        </defaultValue>
    </outcomeDeclaration>
    <itemBody>
        <div class="grid-row">
            <div class="col-12">
                <choiceInteraction shuffle="false" maxChoices="0" orientation="vertical" responseIdentifier="RESPONSE">
                    <prompt/>
                    <simpleChoice fixed="false" showHide="show" identifier="choice_1">choice #1</simpleChoice>
                    <simpleChoice fixed="false" showHide="show" identifier="choice_2">choice #2</simpleChoice>
                    <simpleChoice fixed="false" showHide="show" identifier="choice_3">choice #3</simpleChoice>
                </choiceInteraction>
            </div>
        </div>
    </itemBody>
    <responseProcessing>
        <responseCondition>
            <responseIf>
                <match>
                    <variable identifier="RESPONSE"/>
                    <correct identifier="RESPONSE"/>
                </match>
                <setOutcomeValue identifier="SCORE_RESPONSE">
                    <sum>
                        <variable identifier="SCORE_RESPONSE"/>
                        <baseValue baseType="integer">1</baseValue>
                    </sum>
                </setOutcomeValue>
            </responseIf>
        </responseCondition>
        <setOutcomeValue identifier="SCORE">
            <sum>
                <variable identifier="SCORE_RESPONSE"/>
            </sum>
        </setOutcomeValue>
    </responseProcessing>
</assessmentItem>